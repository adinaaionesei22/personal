<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="evonomix_ribbon" resource="default" engine="innodb" comment="Evonomix Ribbon Table">
        <column xsi:type="int" name="ribbon_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Ribbon ID"/>
        <column xsi:type="varchar" name="title" length="255" nullable="false" comment="Title"/>
        <column xsi:type="text" name="description" nullable="true" comment="Description"/>
        <column xsi:type="varchar" name="link" length="255" nullable="true" comment="Link URL"/>
        <column xsi:type="varchar" name="band_color" length="50" nullable="false" default="#000000" comment="Band Color"/>
        <column xsi:type="datetime" name="start_date" nullable="false" comment="Start Date"/>
        <column xsi:type="datetime" name="end_date" nullable="false" comment="End Date"/>
        <column xsi:type="smallint" name="display_pages" nullable="false" default="0" comment="Display Pages: 0=All Pages, 1=Homepage Only"/>
        <column xsi:type="smallint" name="is_active" nullable="false" default="1" comment="Is Active"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="ribbon_id"/>
        </constraint>
        <index referenceId="IDX_EVONOMIX_RIBBON_ACTIVE" indexType="btree">
            <column name="is_active"/>
        </index>
        <index referenceId="IDX_EVONOMIX_RIBBON_DATES" indexType="btree">
            <column name="start_date"/>
            <column name="end_date"/>
        </index>
    </table>
</schema>

